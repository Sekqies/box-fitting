{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenGL Project",
            "type": "shell",
            "command": "g++",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"],

            // --- CONFIGURAÇÃO PARA WINDOWS (MinGW) ---
            "windows": {
                "args": [
                    "-g",
                    "${workspaceFolder}/src/*.cpp",
                    "${workspaceFolder}/src/*.c",  // Garante que o glad.c seja compilado
                    "-o", "${workspaceFolder}/build/main.exe",
                    "-I${workspaceFolder}/include",
                    "-L${workspaceFolder}/lib",
                    "-std=c++20",
                    
                    // Libs do Windows
                    "-lglfw3",
                    "-lopengl32",
                    "-lgdi32"
                ]
            },

            // --- CONFIGURAÇÃO PARA LINUX / WSL ---
            "linux": {
                "args": [
                    "-g",
                    "${workspaceFolder}/src/*.cpp",
                    "${workspaceFolder}/src/*.c",  // Garante que o glad.c seja compilado
                    "-o", "${workspaceFolder}/build/main", // Sem .exe
                    "-I${workspaceFolder}/include",
                    "-std=c++20",

                    // Libs do Linux (note a diferença aqui)
                    "-lglfw", 
                    "-lGL",
                    "-lm",
                    "-lpthread",
                    "-ldl",
                    "-lX11"
                ]
            }
        }
    ]
}