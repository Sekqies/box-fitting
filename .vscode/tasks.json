{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenGL Project",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", 
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/build/main.exe", 
                "-I${workspaceFolder}/include", 
                "-L${workspaceFolder}/lib",     
                "-lglfw3",                    
                "-lopengl32",                  
                "-lgdi32"                       
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}